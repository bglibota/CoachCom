<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SuccessfulActivityWeightLossPlan">


    <Button
        android:id="@+id/successful_weight_loss_plan_confirmButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/successful_weight_loss_plan_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:gravity="center|center_horizontal"
        android:text="Confirm" />

    <ImageView
        android:id="@+id/weight_loss_plan_imageViewSuccessful"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="122dp"
        android:src="@drawable/successful" />

    <TextView
        android:id="@+id/successful_weight_loss_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/weight_loss_plan_imageViewSuccessful"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        android:text="Your change has been reset successfully."
        android:textSize="20sp" />

</RelativeLayout>