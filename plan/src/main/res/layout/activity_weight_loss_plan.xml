<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F2F2"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WeightLossPlan">

        <ImageView
            android:id="@+id/weight_loss_plan_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/weight_loss_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight_loss_plan_back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="Enter weight loss plan"
            android:textSize="24sp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameTextInputLayout"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_below="@+id/weight_loss_plan_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weight_loss_plan_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Name"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionTextInputLayout"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_below="@+id/nameTextInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weight_loss_plan_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLength="255" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/startDateTextInputLayout"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_below="@+id/descriptionTextInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weight_loss_plan_start_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Start Date"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/endDateTextInputLayout"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_below="@+id/startDateTextInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weight_loss_plan_end_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="End Date"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/difficultySpinner"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_below="@+id/endDateTextInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <ListView
            android:id="@+id/exercisesListView"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/difficultySpinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:choiceMode="multipleChoice"/>

        <Button
            android:id="@+id/enterDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercisesListView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:text="Enter weight loss plan data" />


    </RelativeLayout>
</ScrollView>
