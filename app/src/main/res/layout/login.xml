<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F2F2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="foi.air.coachcom.Login">

    <View
        android:id="@+id/separatorView11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/or"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_below="@+id/separatorView11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:text="Create new account" />

    <TextView
        android:id="@+id/Logo"
        android:layout_width="184dp"
        android:layout_height="47dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:autoText="false"
        android:gravity="center"
        android:text="CoachCom"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Sign in"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/hi_there"
        android:layout_width="279dp"
        android:layout_height="33dp"
        android:layout_below="@+id/sign_in"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:text="Hi there! Nice to see you again."
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_forgot_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Log In" />

        <TextView
            android:id="@+id/login_forgot_password"
            android:layout_width="170dp"
            android:layout_height="50dp"

            android:layout_below="@+id/login_password_input_layout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="Forgot Password?"
            android:textColor="#03A9F4" />

        <ImageView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
            app:srcCompat="@drawable/gym"
        android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/or"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_below="@+id/login_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="180dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="180dp"
            android:gravity="center"
            android:text="or"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_username_input_layout"
            android:layout_width="317dp"
            android:layout_height="60dp"
            android:layout_below="@+id/hi_there"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_username"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:hint="Username or email"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password_input_layout"
            android:layout_width="317dp"
            android:layout_height="60dp"
            android:layout_below="@+id/login_username_input_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            app:passwordToggleContentDescription="Show/Hide Password"
            app:passwordToggleDrawable="@drawable/baseline_visibility_24"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_password"
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:hint="Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

</ScrollView>
