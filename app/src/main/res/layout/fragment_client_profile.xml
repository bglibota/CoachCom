<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foi.air.coachcom.ClientProfileFragment" >

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_circle" />

    <TextView
        android:id="@+id/client_profile_name"
        android:layout_width="197dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cilient_profile_name_view"
        android:layout_width="267dp"
        android:layout_height="34dp"
        android:layout_below="@+id/client_profile_image"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="88dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/client_profile_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center"
        android:layout_marginStart="122dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="122dp"
        android:src="@drawable/user"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cilient_profile_name_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-43dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/client_name_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="289dp"
        android:src="@drawable/baseline_person_24" />






</RelativeLayout>
