<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foi.air.coachcom.HomeFragment">

    <Button
        android:id="@+id/Top_picks_button"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:text="Top picks"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Programs_button"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/All_button"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:text="All"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/Coaches_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/Coaches_button"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:text="Coaches"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/Programs_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/All_button"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/Programs_button"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:text="Programs"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/Top_picks_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Coaches_button"
        tools:layout_editor_absoluteY="183dp" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:foreground="@drawable/gym"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:text="Hello,"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="45dp" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="371dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="130dp" />

</androidx.constraintlayout.widget.ConstraintLayout>